{
  "name": "chocolate-frontend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/chocolate-frontend/src",
  "projectType": "application",
  "targets": {
    "prebuild": {
      "command": "bash ./scripts/prebuild.sh fetch:contract"
    },
    "build": {
      "executor": "@nrwl/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/chocolate-frontend"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "serve": {
      "executor": "@nrwl/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "chocolate-frontend:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "chocolate-frontend:build:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "chocolate-frontend:build:production",
          "hmr": false
        }
      }
    },
    "preview": {
      "executor": "@nrwl/vite:preview-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "chocolate-frontend:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "chocolate-frontend:build:development"
        },
        "production": {
          "buildTarget": "chocolate-frontend:build:production"
        }
      }
    },
    "test": {
      "executor": "@nrwl/vite:test",
      "outputs": ["coverage/apps/chocolate-frontend"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/apps/chocolate-frontend"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/chocolate-frontend/**/*.{ts,tsx,js,jsx}"]
      }
    }
  },
  "tags": []
}
